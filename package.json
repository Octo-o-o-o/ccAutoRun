{
  "name": "ccautorun",
  "version": "2.0.0",
  "description": "AI-powered task automation for Claude Code - Transform complex development tasks into self-executing workflows",
  "type": "module",
  "main": "src/cli.js",
  "bin": {
    "ccautorun": "./bin/ccautorun.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:performance": "vitest run tests/performance",
    "test:all": "vitest run && npm run test:e2e && npm run test:performance",
    "lint": "eslint src/",
    "prepare": "node -e \"try { require('fs').chmodSync('bin/ccautorun.js', '755') } catch(e) { /* Windows doesn't need this */ }\"",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "automation",
    "ai",
    "claude",
    "claude-code",
    "task-automation",
    "workflow",
    "cli",
    "developer-tools",
    "ai-tools",
    "productivity",
    "task-runner",
    "execution-plan",
    "cross-platform",
    "devops",
    "ci-cd"
  ],
  "author": {
    "name": "ccAutoRun Team",
    "url": "https://github.com/yourusername/ccautorun"
  },
  "contributors": [
    {
      "name": "Community Contributors",
      "url": "https://github.com/yourusername/ccautorun/graphs/contributors"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.0",
    "commander": "^11.0.0",
    "glob": "^10.3.0",
    "inquirer": "^9.2.0",
    "node-notifier": "^10.0.0",
    "ora": "^7.0.0",
    "winston": "^3.11.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.57.1",
    "vitest": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ccautorun.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ccautorun/issues"
  },
  "homepage": "https://github.com/yourusername/ccautorun#readme",
  "files": [
    "src/",
    "bin/",
    "templates/",
    "README.md",
    "README_CN.md",
    "LICENSE",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "docs/QUICKSTART.md",
    "docs/GUIDE.md",
    "docs/TEMPLATES.md",
    "docs/FAQ.md",
    "docs/TROUBLESHOOTING.md",
    "docs/EXAMPLES.md",
    "docs/TESTING.md"
  ],
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
